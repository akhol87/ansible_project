options {
    directory "/var/named";
    listen-on port 53 { any; };
    listen-on-v6 { none; };
    recursion yes;
    allow-recursion { 127.0.0.1; 10.0.0.0/24; };
    allow-query-cache { 127.0.0.1; 10.0.0.0/24; };
    allow-query { 127.0.0.1; 10.0.0.0/24; };
    forwarders {
        8.8.8.8;
        1.1.1.1;
    };
    forward only;
};

logging {
    channel default_debug {
        file "data/named.run";
        severity dynamic;
    };
};

zone "{{ dns_domain }}" IN {
    type master;
    file "/var/named/db.forward";
    allow-transfer { any; };
    allow-update { none; };
};

zone "0.0.10.in-addr.arpa" IN {
    type master;
    file "/var/named/db.reverse";
    allow-transfer { any; };
    allow-update { none; };
};